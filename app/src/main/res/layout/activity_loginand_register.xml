<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginandRegisterActivity">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:src="@drawable/carlogo"
        android:layout_marginTop="20dp"
        />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Car Parking"
         android:textColor="@color/black"
         android:textStyle="bold"
         android:textSize="30sp"
         android:padding="10dp"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Image result for car parking description
         \nParking is the act of stopping and disengaging a vehicle and leaving it unoccupied"
         android:textColor="@color/black"
         android:textStyle="bold"
         android:padding="10dp"
         android:textSize="20sp"
         />
     <Button
         android:id="@+id/bt_login"
         android:layout_width="250dp"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:text="Login"
         android:layout_marginTop="200dp"
         />
    <Button
        android:id="@+id/bt_reg"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Register"
        android:layout_marginTop="10dp"
        />
</LinearLayout>